# Maintainer: pg9182 <96569817+pg9182@users.noreply.github.com>
pkgname=northstar-stubs
pkgver=1
pkgrel=0
pkgdesc="Stubs for the Northstar dedicated server"

url="https://github.com/R2Northstar/NorthstarStubs"
license="Zlib"

arch="x86_64"
source="https://github.com/R2Northstar/NorthstarStubs/releases/download/v${pkgver}/NorthstarStubs.zip"
options="!check"

package() {
	for x in d3d11.dll GFSDK_SSAO.win64.dll GFSDK_TXAA.win64.dll; do
		install -Dm755 "$srcdir/$x" "$pkgdir/usr/lib/northstar-stubs/$x"
	done
}
